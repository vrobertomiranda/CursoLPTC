uses
  conexao;

function consulta();
var
  conSQL : string;
  qry : oleVariant;
begin
  conSQL := 'SELECT COBRANCA FROM PCCOB WHERE CODCOB = ''D''';
  
  qry := conexao.criaConexao;
  qry.SQL := conSQL;
  qry.open;
  
  result: = qry.FieldByName('COBRANCA').AsString;
  
  qry.close;
end;

