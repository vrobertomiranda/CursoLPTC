procedure operadorAND;

var
  teste : boolean;
  valor : interger;
  palavra : string;
  
begin
  teste := true;
  valor := 20;
  palavra := 'curso';

  //operador AND
  
  if (teste = true) and (valor = 30) then // quando ta testando mais de uma condição no if, deve-se colocar as condições entre parenteses
    begin
      Log.Message('Sua condicao é verdadeira!');
      log.Checkpoint(teste);
      Log.Checkpoint(valor);
      
    end else
      log.Message('Sua condicao é falsa!');

end;

